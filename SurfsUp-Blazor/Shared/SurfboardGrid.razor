@using SurfsUp_Models
<h3>SurfboardGrid</h3>


<div style="display:flex;flex-direction:row;">
    @foreach (var s in Surfboards)
    {
        <SurfboardCard Surfboard=@s RemoveMeFromList=@Remove></SurfboardCard>
    }
</div>

@code
{
    [Parameter]
    public List<Surfboard> Surfboards { get; set; }

    private void Remove(Surfboard surfboard) {
        Surfboards.Remove(surfboard);
    }
}


